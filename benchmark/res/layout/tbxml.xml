<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
            android:background="#ff202020"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingLeft="12dp"
            android:paddingRight="12dp"
            android:paddingTop="8dp"
            android:paddingBottom="8dp">

 <RelativeLayout android:background="@drawable/background"
                 android:layout_width="match_parent"
                 android:layout_height="wrap_content"
                 android:padding="12dp">
    
  <TextView android:id="@+id/iterations_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="8dp"
            android:layout_alignBaseline="@+id/iterations"
            android:layout_alignParentLeft="true"
            android:textColor="#ffffffff"
            android:textSize="13sp" 
            android:textStyle="normal"
            android:text="@string/label_iterations" />
 
  <EditText android:id="@+id/iterations"
            android:background="@drawable/loops"
            android:layout_width="56sp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="12sp"
            android:layout_alignParentTop="true"
            android:layout_toRightOf="@+id/iterations_label"
            android:gravity="center"
            android:padding="0dp"
            android:textColor="#ff404040"
            android:textSize="13sp"
            android:textCursorDrawable="@null"  
            android:inputType="number" />
 
  <TextView android:id="@+id/size"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/iterations"
            android:layout_alignParentRight="true"
            android:padding="4dp"
            android:gravity="right"
            android:textColor="#ffffffff"
            android:textStyle="normal"
            android:textSize="13sp"/>
  
  <TextView android:id="@+id/info"
            android:background="@drawable/info"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"
            android:layout_below="@+id/iterations"
            android:layout_centerHorizontal="true"
            android:paddingTop="4dp"
            android:paddingBottom="4dp"
            android:paddingLeft="12dp"
            android:paddingRight="12dp"
            android:textColor="#ff404040" 
            android:textSize="13sp" />
  
  <LinearLayout android:id="@+id/jdk"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/info">
   <Button style="@style/ButtonX" 
           android:id="@+id/xpath"
           android:layout_width="0dp" 
           android:layout_weight="1" 
           android:layout_marginRight="4dp"
           android:text="@string/xpath" 
           android:onClick="onXPath" />
   <Button style="@style/ButtonX" 
           android:id="@+id/sax"   
           android:layout_width="0dp" 
           android:layout_weight="1" 
           android:layout_marginLeft="4dp"
           android:text="@string/sax" 
           android:onClick="onSax" />
  </LinearLayout>

  <LinearLayout android:id="@+id/tbxml"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/jdk">
  
   <Button style="@style/ButtonX"
           android:id="@+id/java"
           android:layout_width="0dp" 
           android:layout_weight="1" 
           android:layout_marginRight="4dp"
           android:text="@string/java" 
           android:onClick="onJAVA" />
 
   <Button style="@style/ButtonX"
           android:id="@+id/c"
           android:layout_width="0dp" 
           android:layout_weight="1" 
           android:layout_marginLeft="4dp"
           android:text="@string/c" 
           android:onClick="onC"/>
  </LinearLayout>
 
  <RelativeLayout android:id="@+id/grid"
                  android:background="@drawable/grid"
                  android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:layout_marginTop="12dp"
                  android:layout_below="@+id/tbxml"
                  android:layout_centerHorizontal="true"
                  android:padding="3dp">

   <LinearLayout style="@style/Row" 
                 android:id="@+id/headings" 
                 android:layout_alignParentTop="true" 
                 android:layout_toRightOf="@+id/c_label">
    <TextView style="@style/Cell" android:text="@string/min"     />
    <TextView style="@style/Cell" android:text="@string/average" />
    <TextView style="@style/Cell" android:text="@string/max"     />
    <TextView style="@style/Cell" android:text="@string/runs"    />
   </LinearLayout>

   <LinearLayout style="@style/Row" 
                 android:id="@+id/xpath_row" 
                 android:layout_below="@+id/headings" 
                 android:layout_alignLeft="@+id/headings">
    <TextView style="@style/Cell" android:id="@+id/xpath_min"  />
    <TextView style="@style/Cell" android:id="@+id/xpath_ave"  />
    <TextView style="@style/Cell" android:id="@+id/xpath_max"  />
    <TextView style="@style/Cell" android:id="@+id/xpath_runs" />
   </LinearLayout>

   <LinearLayout style="@style/Row" 
                 android:id="@+id/sax_row" 
                 android:layout_below="@+id/xpath_row" 
                 android:layout_alignLeft="@+id/headings">
    <TextView style="@style/Cell" android:id="@+id/sax_min"  />
    <TextView style="@style/Cell" android:id="@+id/sax_ave"  />
    <TextView style="@style/Cell" android:id="@+id/sax_max"  />
    <TextView style="@style/Cell" android:id="@+id/sax_runs" />
   </LinearLayout>
   
   <LinearLayout style="@style/Row" 
                 android:id="@+id/java_row" 
                 android:layout_below="@+id/sax_row" 
                 android:layout_alignLeft="@+id/headings">
    <TextView style="@style/Cell" android:id="@+id/java_min"  />
    <TextView style="@style/Cell" android:id="@+id/java_ave"  />
    <TextView style="@style/Cell" android:id="@+id/java_max"  />
    <TextView style="@style/Cell" android:id="@+id/java_runs" />
   </LinearLayout> 

   <LinearLayout style="@style/Row" 
                 android:id="@+id/c_row" 
                 android:layout_below="@+id/java_row" 
                 android:layout_alignLeft="@+id/headings">
    <TextView style="@style/Cell" android:id="@+id/c_min"  />
    <TextView style="@style/Cell" android:id="@+id/c_ave"  />
    <TextView style="@style/Cell" android:id="@+id/c_max"  />
    <TextView style="@style/Cell" android:id="@+id/c_runs" />
   </LinearLayout>
  
   <TextView style="@style/Label"
             android:id="@+id/jdk_label" 
             android:layout_alignBottom="@+id/xpath_row" 
             android:layout_alignParentLeft="true" 
             android:text="@string/label_xpath" /> 

   <TextView style="@style/Label"
             android:id="@+id/sax_label" 
             android:layout_alignBottom="@+id/sax_row" 
             android:layout_alignLeft="@+id/jdk_label" 
             android:text="@string/label_sax" /> 
   
   <TextView style="@style/Label"
             android:id="@+id/java_label" 
             android:layout_alignBottom="@+id/java_row" 
             android:layout_alignLeft="@+id/jdk_label" 
             android:text="@string/label_java" />
   
   <TextView style="@style/Label"
             android:id="@+id/c_label" 
             android:layout_alignBottom="@+id/c_row" 
             android:layout_alignLeft="@+id/java_label" 
             android:text="@string/label_c" />
   
  </RelativeLayout> 
     
  <ProgressBar style="@android:style/Widget.ProgressBar.Large"
               android:id="@+id/windmill"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:layout_centerInParent="true" 
               android:visibility="gone" />
 </RelativeLayout>
</ScrollView>